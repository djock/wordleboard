@{
    ViewData["Title"] = "Create Board";
}

<form asp-controller="Board" asp-action="Create" method="post" role="form">
    <h4>Create new board</h4>

    <div class="row g-3 align-items-center">
        <div class="row-auto form-floating mb-2 col-xs-3">
            <input type="text" name="boardName" class="form-control" placeholder="Board name">
            <label for="boardName"><i>Board name</i></label>
        </div>

        <div class="row-auto form-floating mb-2 col-xs-3">
            <input type="text" name="boardDescription" class="form-control" placeholder="Board description">
            <label for="boardDescription"><i>Board description</i></label>
        </div>

        <div class="row-auto form-floating mb-2 col-xs-3">
            <input type="date" name="selectedDate" id="datePicker" value="" class="form-control" />
        </div>

        <div class="row-auto form-floating mb-2 col-xs-3">
            <input type="text" name="daysCount" class="form-control" placeholder="Board name">
            <label for="daysCount"><i>Days count (leave empty if it's not time based)</i></label>
        </div>

        <div class="row-auto form-floating mb-2 ">
            <button type="submit" class="btn btn-primary mb-2">Submit</button>
        </div>
    </div>
</form>